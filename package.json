{
  "name": "six-degrees-of-separation",
  "version": "0.1.0",
  "description": "six degrees of separation with boxers",
  "main": "index.js",
  "scripts": {
    "start": "   node    dist/server-main.js",
    "start:ts": "ts-node src/server-main.ts",
    "dev-server": " ts-node-dev src/server-main.ts",
    "build": "      rm -rf dist/* && tsc",
    "build:watch": "rm -rf dist/* && tsc --watch",
    "test": "         npm run build && jest --forceExit",
    "test:coverage": "npm run build && jest --forceExit --coverage",
    "test:codecov-upload": "codecov -f coverage/*.json",
    "test:watch": "   npm run build && jest --forceExit --watch",
    "tslint": "    tslint -c tslint.json       -e 'node_modules/**/*' '**/*.ts?(x)'",
    "tslint:fix": "tslint -c tslint.json --fix -e 'node_modules/**/*' '**/*.ts?(x)'",
    "webpack": "       webpack            --config webpack/dev.js        ",
    "webpack:watch": " webpack  --watch   --config webpack/dev.js        ",
    "webpack:prod": "  webpack            --config webpack/prod.js       "
  },
  "repository": {
    "type": "git",
    "url": ""
  },
  "keywords": [
    "boxing",
    "boxers"
  ],
  "license": "MIT",
  "private": true,
  "bugs": {
    "url": ""
  },
  "engines": {
    "node": ">= 6.0.0"
  },
  "homepage": "",
  "dependencies": {
    "@types/sequelize": "^4.27.14",
    "corejs": "^1.0.0",
    "express": "^4.16.2",
    "pg": "^7.4.1",
    "tslib": "^1.8.0"
  },
  "devDependencies": {
    "@types/chai": "^4.0.5",
    "@types/express": "^4.11.1",
    "@types/jest": "^21.1.6",
    "@types/node": "^9.6.4",
    "babel-minify-webpack-plugin": "0.2.0",
    "chai": "^4.1.2",
    "codecov": "^3.0.0",
    "jest": "^21.2.1",
    "sequelize": "^4.37.6",
    "ts-jest": "^21.2.3",
    "ts-loader": "^3.1.1",
    "ts-node": "^3.3.0",
    "ts-node-dev": "^1.0.0-pre.5",
    "tslint": "^5.8.0",
    "typescript": "^2.6.1",
    "webpack": "^3.8.1",
    "webpack-dev-middleware": "^1.12.0",
    "webpack-hot-middleware": "^2.20.0",
    "webpack-merge": "^4.1.1",
    "webpack-visualizer-plugin": "^0.1.11"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "roots": [
      "src",
      "dist"
    ],
    "testMatch": [
      "/**/__test__/*.(ts|js|tsx|jsx)",
      "/**/*\\.(spec|test)\\.(ts|js|tsx|jsx)"
    ],
    "collectCoverageFrom": [
      "lib-ts/**/*.(ts|tsx)",
      "!dist/",
      "!**/node_modules",
      "!/coverage"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx"
    ],
    "mapCoverage": true,
    "coverageReporters": [
      "json",
      "lcov",
      "text",
      "html"
    ]
  }
}
